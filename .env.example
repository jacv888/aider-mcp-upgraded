###############################################
# 🔐 Aider-MCP Configuration Template (.env)
# 📁 Copy this file to `.env` and insert real keys
# 🚫 Never commit real API keys to version control
# 🧩 This is a template — it contains no active credentials
###############################################

# 🔑 AI PROVIDER API KEYS
# Required: Add your keys below to use the corresponding models
OPENAI_API_KEY=   # 🔓 Required for GPT-4.1 models
GEMINI_API_KEY=   # ✍️ Required for Gemini Flash (writing/docs)
ANTHROPIC_API_KEY=   # 🤖 Leave empty if Anthropic is unused

# 🛡️ SYSTEM RESILIENCE SETTINGS (🧠 Runtime stability tuning)
MAX_TASK_QUEUE_SIZE=10               # ⏳ Max queued tasks before blocking
MAX_CONCURRENT_TASKS=3               # 🚦 Max parallel executions
CPU_USAGE_THRESHOLD=75.0             # 💻 Pause if CPU exceeds this %
MEMORY_USAGE_THRESHOLD=80.0          # 🧠 Pause if memory exceeds this %
CIRCUIT_BREAKER_FAILURE_THRESHOLD=3  # 🛑 Failures before circuit breaks
CIRCUIT_BREAKER_RESET_TIMEOUT=60     # 🔁 Cooldown period (seconds)
HEALTH_CHECK_INTERVAL=30             # 🩺 System health check frequency (sec)

# 🧠 STRATEGIC OVERRIDE (Optional)
# Override Aider's model auto-selection with one of your choice
# Leave blank to use the full logic tree below
AIDER_MODEL=

# 🎯 COMPLEXITY-BASED MODEL SELECTION
# Define models based on problem complexity
AIDER_MODEL_HARD=
AIDER_MODEL_COMPLEX=
AIDER_MODEL_MEDIUM=
AIDER_MODEL_EASY=
AIDER_MODEL_SIMPLE=

# 🛠️ TASK-TYPE MODEL SELECTION
# Fine-tune models by the nature of the task
AIDER_MODEL_WRITING=           # ✍️ Email copy, blog drafts, narrative
AIDER_MODEL_DOCS=              # 📄 API docs, guides, onboarding
AIDER_MODEL_TESTING=           # 🧪 Unit tests, test plans, mocks
AIDER_MODEL_REFACTOR=          # 🧼 Code cleanup & style updates
AIDER_MODEL_OPTIMIZATION=      # ⚙️ Performance tuning or rewrite
AIDER_MODEL_ALGORITHM=         # 📐 Complex logic or data structures

# 💻 TECHNOLOGY-SPECIFIC MODEL SELECTION
# Optimise models per tech domain
AIDER_MODEL_REACT=             # ⚛️ JSX components, UI logic
AIDER_MODEL_VUE=               # 🟩 Vue SFCs or options API
AIDER_MODEL_PYTHON=            # 🐍 Scripts, libs, notebooks
AIDER_MODEL_JAVASCRIPT=        # 📜 Vanilla JS, browser logic
AIDER_MODEL_TYPESCRIPT=        # 🔒 Strongly typed TS
AIDER_MODEL_CSS=               # 🎨 Styling & layout rules
AIDER_MODEL_DATABASE=          # 🧮 SQL, schema design, queries
AIDER_MODEL_API=               # 🌐 REST, OpenAPI, headers, handlers
AIDER_MODEL_FRONTEND=          # 🖼️ UI logic, forms, interaction
AIDER_MODEL_BACKEND=           # 🖥️ Server logic, APIs, jobs

# ⚡ PERFORMANCE-BASED MODEL SELECTION
# For dynamic task routing or fallback paths
AIDER_MODEL_FAST=              # ⚡ Speed-critical ops
AIDER_MODEL_QUICK=             # ⚡💨 One-shot short tasks
AIDER_MODEL_DEBUG=             # 🐞 For stack traces & issue hunting

# ⚙️ AIDER RUNTIME FLAGS
AIDER_NO_AUTO_COMMITS=true     # 🔐 Disable Git auto-commits
AIDER_NO_SHOW_MODEL_WARNINGS=true   # 🙈 Hide noisy model info

# 📋 CONFIG FILE PRIORITY (Highest → Lowest):
# 1. This file (.env)
# 2. ~/.config/aider/.env
# 3. ./aider/.env (project dir fallback)